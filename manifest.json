{
    "name": "Text Highlighter",
    "version": "1.0",
    "manifest_version": 3,
    "description": "在網頁上高亮指定文字。",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "文字高亮工具"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]      
      }
    ],
    "web_accessible_resources": [
    {
      "resources": ["sound.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
  }
  